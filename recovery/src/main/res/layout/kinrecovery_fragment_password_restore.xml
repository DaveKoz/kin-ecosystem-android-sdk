<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/kin_recovery_password_qr_icon"
        android:layout_width="@dimen/kinrecovery_password_qr_icon_size"
        android:layout_height="@dimen/kinrecovery_password_qr_icon_size"
        android:src="@drawable/kinrecovery_password_recovery_qr_code_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/kinrecovery_password_recovery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kinrecovery_password_recovery_content_margin_top"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="@string/kinrecovery_password_recovery_content"
        android:textColor="@color/kinrecovery_gray"
        android:textSize="@dimen/kinrecovery_password_recovery_content_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kin_recovery_password_qr_icon"/>

    <EditView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#7884a5"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="8sp"
        android:text="Enter Password"
        />

    <View
        android:id="@+id/kinrecovery_password_recovery_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kinrecovery_upload_btn_frame_height"
        android:layout_marginStart="@dimen/kinrecovery_btn_frame_margin_sides"
        android:layout_marginEnd="@dimen/kinrecovery_btn_frame_margin_sides"
        android:layout_marginBottom="10dp"
        android:background="@drawable/kinrecovery_upload_btn_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/kinrecovery_password_recovery_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kinrecovery_done"
        android:textColor="@color/kinrecovery_white"
        android:textSize="@dimen/kinrecovery_btn_text_size"
        app:layout_constraintBottom_toBottomOf="@id/kinrecovery_password_recovery_btn"
        app:layout_constraintEnd_toEndOf="@id/kinrecovery_password_recovery_btn"
        app:layout_constraintStart_toStartOf="@id/kinrecovery_password_recovery_btn"
        app:layout_constraintTop_toTopOf="@id/kinrecovery_password_recovery_btn"
        />
</android.support.constraint.ConstraintLayout>